{
  "name": "nextjs-ci-cd",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "launch": "next build && next start",
    "lint": "next lint",
    "test": "jest",
    "test:dry-run": "concurrently -k -n launch,test -s command-test \"npm run launch\" \"wait-on http://localhost:3000\"",
    "test:e2e": "concurrently -k -n launch,e2e -s command-e2e \"npm run launch\" \"wait-on http://localhost:3000 && cypress run --e2e -b chrome --headless\"",
    "test:post-deploy": "dotenv -e .env.$NODE_ENV -- wait-on $APP_URL"
  },
  "dependencies": {
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.2.2",
    "cypress": "^13.12.0",
    "dotenv": "^16.4.5",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mocha": "^10.4.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  }
}
